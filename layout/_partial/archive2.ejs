<section class="archive-outer">
    <section class="archive-inner">
        <% var last; %>
        <% site.posts.sort('date', -1).each(function(post, i) { %>
        <% var year = post.date.year(); %>
        <% if (last != year){ %>
            <% if (last != null){ %>
            <% } %>
            <% last = year; %>
        <div class="archive-name <%if(theme.style.animation.open==true){%>animate__animated  animate__fadeInUp<% } %>"><%=  year %></div>
        <% } %>
          <a  href="<%=url_for(post.path)%>">
          <div class="archive-post <%if(theme.style.animation.open==true){%>animate__animated  animate__fadeInUp<% } %>">
            <div class="archive-post-title"><%=post.title%></div>
            <div class="archive-post-date"><%=date(post.date,'MM-DD') %></div>
            <!-- <%=full_date(post.date,'MMM D') %> -->
          </div>
          </a>
        <% }) %>
        
    </section>
</section>
  

  